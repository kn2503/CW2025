<?import com.comp2042.view.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<Pane fx:controller="com.comp2042.controller.GuiController"
      xmlns:fx="http://javafx.com/fxml">
    <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
    <BorderPane styleClass="gameBoard" fx:id="gameBoard">
        <center>
            <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
        </center>
    </BorderPane>

    <VBox fx:id="nextBox" spacing="10" alignment="TOP_CENTER"
          layoutY="40"
          style="-fx-padding: 10;">

        <Label fx:id="scoreLabel"
               layoutX="300"
               layoutY="250"
               text="Score: 0"
               style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;" />


        <Label text="NEXT"
               style="-fx-text-fill: cyan;
                      -fx-font-size: 18;
                      -fx-font-weight: bold;"/>


        <StackPane fx:id="nextBrickFrame"
                   style="-fx-background-color: rgba(255,255,255,0.1);
                          -fx-border-color: white;
                          -fx-border-width: 2;
                          -fx-border-radius: 8;
                          -fx-background-radius: 8;
                          -fx-padding: 10;
                          -fx-min-width: 120;
                          -fx-min-height: 120;">
            <GridPane fx:id="nextBrickPanel" hgap="1" vgap="1"/>
        </StackPane>
    </VBox>
    <Group fx:id="groupNotification" layoutX="14" layoutY="203">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>